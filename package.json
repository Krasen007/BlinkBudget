{
  "name": "blinkbudget",
  "version": "1.19",
  "type": "module",
  "description": "Making expense tracking effortless, all in 3 moves.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "node config/validate-env.cjs && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"src/styles/**/*.css\"",
    "lint:css:fix": "stylelint \"src/styles/**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run lint:css && npm run format:check",
    "fix": "npm run lint:fix && npm run lint:css:fix && npm run format",
    "validate-env": "node config/validate-env.cjs"
  },
  "keywords": [],
  "author": "Krasen Ivanov",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@fullhuman/postcss-purgecss": "^8.0.0",
    "autoprefixer": "^10.4.24",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.3.0",
    "lightningcss": "^1.30.2",
    "postcss": "^8.5.6",
    "postcss-custom-media": "^11.0.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "vite": "^7.2.7",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "firebase": "^12.7.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "quoteProps": "as-needed",
    "bracketSameLine": false,
    "proseWrap": "preserve"
  }
}
