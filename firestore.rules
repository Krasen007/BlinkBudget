rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidTimestamp() {
      return request.time < timestamp.date(2025, 1, 1);
    }
    
    function isValidTransactionData() {
      return request.resource.data.keys().hasAll(['amount', 'category', 'date', 'type']) &&
             request.resource.data.amount is number &&
             request.resource.data.amount >= 0 &&
             request.resource.data.category is string &&
             request.resource.data.category.size() > 0 &&
             request.resource.data.date is timestamp &&
             request.resource.data.type in ['expense', 'income'];
    }
    
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // User profile data
      match /profile/{profileId} {
        allow read, write: if isOwner(userId) && profileId == userId;
      }
      
      // Transactions with validation
      match /transactions/{transactionId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidTransactionData();
        allow update: if isOwner(userId) && isValidTransactionData();
        allow delete: if isOwner(userId);
      }
      
      // Budget data
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }
      
      // Goals data
      match /goals/{goalId} {
        allow read, write: if isOwner(userId);
      }
      
      // Analytics data (read-only aggregation)
      match /analytics/{analyticsId} {
        allow read: if isOwner(userId);
        allow write: if false; // Analytics are computed, not written directly
      }
      
      // Settings data
      match /settings/{settingsId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny all other access attempts
    match /{document=**} {
      allow read, write: if false;
    }
  }
}