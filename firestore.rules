rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile and settings
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Transactions - enforce userId ownership and prevent userId modification
    match /transactions/{transactionId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid && 
        request.resource.data.userId == resource.data.userId;
    }
    
    // Accounts - enforce userId ownership and prevent userId modification
    match /accounts/{accountId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid && 
        request.resource.data.userId == resource.data.userId;
    }
    
    // Investments - enforce userId ownership and prevent userId modification
    match /investments/{investmentId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid && 
        request.resource.data.userId == resource.data.userId;
    }
    
    // Goals - enforce userId ownership and prevent userId modification
    match /goals/{goalId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid && 
        request.resource.data.userId == resource.data.userId;
    }
    
    // Budgets - enforce userId ownership and prevent userId modification
    match /budgets/{budgetId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid && 
        request.resource.data.userId == resource.data.userId;
    }
    
    // Settings - enforce userId ownership
    match /settings/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}